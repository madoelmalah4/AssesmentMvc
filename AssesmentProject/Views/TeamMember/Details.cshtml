@model AssesmentProject.Models.TeamMember

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>TeamMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TeamMemberName)
            </dt>
            <dd class="col-sm-10"style="margin-left:30px">
                @Html.DisplayFor(model => model.TeamMemberName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TeamMemberEmail)
            </dt>
            <dd class="col-sm-10" style="margin-left:30px">
                @Html.DisplayFor(model => model.TeamMemberEmail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TeamMemberRole)
            </dt>
            <dd class="col-sm-10" style="margin-left:30px">
                @Html.DisplayFor(model => model.TeamMemberRole)
            </dd>
        </dl>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Priority</th>
            <th>DeadLine</th>
            <th>ProjectName</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tasks)
        {
             <a class="btn btn-primary" asp-controller="TeamMember" asp-action="Edit" asp-route-id="@item.TeamMember_Id">Edit</a>
             <a class="btn btn-primary" asp-controller="TeamMember" asp-action="Delete" asp-route-id="@item.TeamMember_Id">Delete</a>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeadLine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.project.ProjectName)
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a  asp-controller="Project" asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
