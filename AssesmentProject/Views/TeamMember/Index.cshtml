@model IEnumerable<AssesmentProject.Models.TeamMember>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamMemberID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMemberName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMemberEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamMemberRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamMemberID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamMemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamMemberEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamMemberRole)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.TeamMemberID">Edit</a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.TeamMemberID">Detials</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.TeamMemberID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
